<robot name="2_R_robot">

    <link name="base_link">

        <visual>
            <geometry>
                <box size="1 1 0.001"/>
            </geometry>
            <origin xyz = "0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <box size="1 1 0.001"/>
                <origin xyz = "0 0 0"/>
            </geometry>
        </collision>


    </link>

    <link name="link_1">

        <visual>
            <geometry>
                <cylinder length = "1" radius = "0.03"/>
            </geometry>
            <material name="red">
                    <color rgba="0.8 0 0 1"/>
            </material>
            <origin xyz = "0 0 0.5"/>
        </visual>

    </link>

    <link name="link_2">

        <visual>
            <geometry>
                <cylinder length = "1" radius = "0.03"/>
            </geometry>
            <material name="blue">
                <color rgba="0 0 0.8 1"/>
            </material>
			<origin xyz = "0 0 0.5"/>
        </visual>

    </link>

    <link name="link_3">

    <visual>
			 <geometry>
              <box size="0.01 0.01 0.01"/>
             </geometry>
			  <origin xyz = "0 0 0"/>

        </visual>
    </link>



    <joint name="Base_to_Link1" type="revolute">
        <parent link = "base_link"/>
        <child link = "link_1"/>
        <origin xyz = "0 0 0.001"/>
      	<axis xyz = "-1 0 0"/>
      	<limit upper = "3.14159" lower = "-3.14159"/>
    </joint>

    <joint name="Link1_to_Link2" type="revolute">
        <parent link="link_1"/>
        <child link="link_2"/>
        <origin xyz = "0 0 1"/>
      	<axis xyz = "-1 0 0"/>
      <limit upper = "3.14159" lower = "-3.14159"/>
    </joint>

    <joint name="Link2_to_Link3" type="fixed">
        <parent link="link_2"/>
        <child link="link_3"/>
        <origin xyz = "0 0 1"/>

    </joint>


</robot>